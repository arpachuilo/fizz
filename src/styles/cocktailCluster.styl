.key
  display inline-block
  margin-right 0.2em
  padding 0 2px 0 2px
  border-radius 5px
  cursor pointer
  opacity 0.7

.key label
  margin-bottom 0
  cursor pointer

.key.selected
  opacity 1
  border-color #000
  border-width 1px
  border-style solid

line
  stroke #999
  stroke-opacity 0.3

circle
  r 1%
  opacity 0.3
  cursor pointer
  transition r 0.4s ease-in-out
  stroke #fff
  stroke-width 1.5px

circle[class*='highlighted'], circle:hover
  r 2%
  transition r 0.4s ease-in-out

circle[class*='visible']
  opacity 1

circle[class*='linked']
  stroke #000

circle[class*='selected']
  stroke #000
  r 3%

line[class*='linked']
  stroke-opacity 1
  stroke-width 3px
